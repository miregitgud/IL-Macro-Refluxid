<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".user.AppSettings">

        <View
            android:id="@+id/view5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/gradient_drawable" />

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/actionbar2"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toTopOf="@+id/view5"
            tools:layout_editor_absoluteX="-16dp" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="70dp"
            android:layout_height="31dp"
            android:layout_marginTop="8dp"
            android:contentDescription="point"
            android:src="@drawable/point"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/actionbar2" />


        <TextView
            android:id="@+id/textView7"
            android:layout_width="74dp"
            android:layout_height="24dp"
            android:layout_marginTop="40dp"
            android:text="Pengaturan"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/view5"
            app:layout_constraintHorizontal_bias="0.1"
            app:layout_constraintStart_toStartOf="@+id/view5"
            app:layout_constraintTop_toBottomOf="@+id/imageView2" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnBahasa"
            android:layout_width="388dp"
            android:layout_height="56dp"
            android:layout_marginTop="112dp"
            android:text="Bahasa"
            android:textAlignment="textStart"
            android:textAllCaps="false"
            android:textColor="@color/black"
            app:backgroundTint="@color/white"
            app:cornerRadius="30dp"
            app:iconPadding="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.478"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/imageView2" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnFavoritmu"
            android:layout_width="388dp"
            android:layout_height="56dp"
            android:text="Keamanan &amp; Privacy"
            android:textAlignment="textStart"
            android:textAllCaps="false"
            android:textColor="@color/black"
            app:backgroundTint="@color/white"
            app:cornerRadius="30dp"
            app:iconPadding="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnBahasa" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnPengaturanChat"
            android:layout_width="388dp"
            android:layout_height="56dp"
            android:text="Pengaturan Chat"
            android:textAlignment="textStart"
            android:textAllCaps="false"
            android:textColor="@color/black"
            app:backgroundTint="@color/white"
            app:cornerRadius="30dp"
            app:iconPadding="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnFavoritmu" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="62dp"
            android:layout_height="21dp"
            android:layout_marginTop="32dp"
            android:text="Bantuan"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/view5"
            app:layout_constraintHorizontal_bias="0.097"
            app:layout_constraintStart_toStartOf="@+id/view5"
            app:layout_constraintTop_toBottomOf="@+id/btnPengaturanChat" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnPusatBantuan"
            android:layout_width="388dp"
            android:layout_height="56dp"
            android:layout_marginTop="16dp"
            android:text="Pusat Bantuan"
            android:textAlignment="textStart"
            android:textAllCaps="false"
            android:textColor="@color/black"
            app:backgroundTint="@color/white"
            app:cornerRadius="30dp"
            app:iconPadding="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.521"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView6" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnPeraturanKomunitas"
            android:layout_width="388dp"
            android:layout_height="56dp"
            android:layout_marginTop="4dp"
            android:text="Peraturan Komunitas"
            android:textAlignment="textStart"
            android:textAllCaps="false"
            android:textColor="@color/black"
            app:backgroundTint="@color/white"
            app:cornerRadius="30dp"
            app:iconPadding="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.521"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnPusatBantuan" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnKebijakanAplikasi"
            android:layout_width="388dp"
            android:layout_height="56dp"
            android:layout_marginTop="4dp"
            android:text="Kebijakan Aplikasi"
            android:textAlignment="textStart"
            android:textAllCaps="false"
            android:textColor="@color/black"
            app:backgroundTint="@color/white"
            app:cornerRadius="30dp"
            app:iconPadding="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.521"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnPeraturanKomunitas" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <data>
        <variable
            name="AppSettings"
            type="com.daurulang.reflux.user.AppSettings" />
    </data>

</layout>

