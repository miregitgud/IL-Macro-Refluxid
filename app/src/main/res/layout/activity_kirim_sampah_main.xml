<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".kirimsampah.KirimSampahMain">

        <View
            android:id="@+id/view11"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/gradient_drawable" />

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/actionBarKirimSampah"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toTopOf="@+id/view11"
            tools:layout_editor_absoluteX="0dp" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="70dp"
            android:layout_height="31dp"
            android:layout_marginTop="8dp"
            android:contentDescription="point"
            android:src="@drawable/point"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/actionBarKirimSampah" />

        <ImageView
            android:id="@+id/imageView12"
            android:layout_width="wrap_content"
            android:layout_height="350dp"
            android:src="@drawable/foto_pengiriman"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.49"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView2" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/textInputEditText"
            android:layout_width="300dp"
            android:layout_height="36dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/corner_bg"
            android:fontFamily="@font/lato_regular"
            android:hint=" Masukkan kuantitas sampah ..."
            android:paddingStart="10dp"
            android:textSize="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView12" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginTop="8dp"
            app:cardCornerRadius="30dp"
            app:layout_constraintTop_toBottomOf="@+id/textInputEditText"
            tools:layout_editor_absoluteX="16dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:layout_marginStart="43dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/foto_pengiriman_2" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnKirimSampah"
                android:layout_width="183dp"
                android:layout_height="29dp"
                android:layout_marginStart="120dp"
                android:layout_marginTop="150dp"
                android:background="@drawable/corner_bg"
                android:backgroundTint="#57AF60"
                android:text="Selanjutnya"
                android:textAllCaps="false"
                android:textColor="@color/white" />

        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
    <data>
        <variable
            name="KirimSampahMain"
            type="com.daurulang.reflux.kirimsampah.KirimSampahMain" />
    </data>
</layout>
