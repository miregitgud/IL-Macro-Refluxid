<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".halamanproduk.konfirmasi_pembelian">

        <View
            android:id="@+id/view10"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/gradient_drawable" />

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/actionbarKonfirmasiPembelian"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toTopOf="@+id/view10"
            tools:layout_editor_absoluteX="16dp" />

        <androidx.cardview.widget.CardView
            android:layout_marginTop="40dp"
            android:layout_width="414dp"
            android:layout_height="650dp"
            app:cardCornerRadius="32dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">


            <ImageView
                android:layout_marginStart="30dp"
                android:id="@+id/imageView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:src="@drawable/foto_konfirmasi"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.507"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imageView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:layout_marginTop="310dp"
                android:foregroundGravity="center"
                android:src="@drawable/foto_konfirmasi_2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView11" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnKonfirmasiPembelian"
                android:layout_width="304dp"
                android:layout_height="30dp"
                android:layout_marginStart="50dp"
                android:layout_marginTop="500dp"
                android:background="@drawable/corner_bg"
                android:backgroundTint="#5999E3"
                android:fontFamily="@font/lato_bold"
                android:text="Konfirmasi Pembelian"
                android:textAllCaps="false"
                android:textColor="@color/white"
                app:layout_constraintTop_toBottomOf="@+id/imageView10" />

        </androidx.cardview.widget.CardView>

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="70dp"
            android:layout_height="31dp"
            android:layout_marginTop="12dp"
            android:contentDescription="point"
            android:src="@drawable/point"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/actionbarKonfirmasiPembelian" />

    </androidx.constraintlayout.widget.ConstraintLayout>
    <data>
        <variable
            name="KonfirmasiPembelian"
            type="com.daurulang.reflux.halamanproduk.KonfirmasiPembelian" />
    </data>
</layout>

