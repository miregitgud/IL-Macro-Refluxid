<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".user.Favoritmu">

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/gradient_drawable"
            />

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/actionbar3"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="-16dp" />


        <TextView
            android:id="@+id/tb_semua"
            android:layout_width="67dp"
            android:layout_height="26dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="32dp"
            android:text="Semua   |"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/actionbar3" />

        <TextView
            android:id="@+id/tb_status"
            android:layout_width="67dp"
            android:layout_height="26dp"
            android:layout_marginStart="316dp"
            android:layout_marginTop="32dp"
            android:text="Kategori"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/actionbar3" />

        <TextView
            android:id="@+id/tb_diskon"
            android:layout_width="67dp"
            android:layout_height="26dp"
            android:layout_marginStart="220dp"
            android:layout_marginTop="32dp"
            android:text="Diskon   |"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/actionbar3" />

        <TextView
            android:id="@+id/tb_kategori"
            android:layout_width="67dp"
            android:layout_height="26dp"
            android:layout_marginStart="120dp"
            android:layout_marginTop="32dp"
            android:text="Status   |"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/actionbar3" />

        <ImageView
            android:src="@drawable/botol_plastik"
            android:layout_width="match_parent"
            android:layout_height="183dp"
            android:layout_marginTop="92dp"
            app:layout_constraintTop_toBottomOf="@+id/actionbar3"
            tools:layout_editor_absoluteX="0dp" />

        <ImageView
            android:src="@drawable/botol_plastik"
            android:id="@+id/imageView3"
            android:layout_width="match_parent"
            android:layout_height="183dp"
            android:layout_marginTop="284dp"
            app:layout_constraintTop_toBottomOf="@+id/actionbar3"
            tools:layout_editor_absoluteX="0dp" />

        <ImageView
            android:id="@+id/imageView6"
            android:src="@drawable/botol_plastik"
            android:layout_width="match_parent"
            android:layout_height="183dp"
            android:layout_marginTop="480dp"
            app:layout_constraintTop_toBottomOf="@+id/actionbar3"
            tools:layout_editor_absoluteX="0dp" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <data>

        <variable
            name="Favoritmu"
            type="com.daurulang.reflux.user.Favoritmu" />

    </data>

</layout>

