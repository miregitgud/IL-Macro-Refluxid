<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".edukasi.TempatPensil">

        <View
            android:id="@+id/view8"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/gradient_drawable"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="0dp" />

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/actionbarTempatPensil"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toTopOf="@+id/view8"
            tools:layout_editor_absoluteX="0dp" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="70dp"
            android:layout_height="31dp"
            android:layout_marginTop="8dp"
            android:contentDescription="point"
            android:src="@drawable/point"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/actionbarTempatPensil" />

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="349dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="68dp"
            android:scaleType="centerCrop"
            android:src="@drawable/tempat_pensil_artikel"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/view8" />

        <androidx.cardview.widget.CardView
            android:layout_marginTop="10dp"
            app:cardCornerRadius="16dp"
            android:layout_width="match_parent"
            android:layout_height="285dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView9">

            <TextView
                android:layout_marginTop="10dp"
                android:text="Pembuatan Tempat Pensil\nUnik Menggunakan Botol Plastik Bekas"
                android:textAlignment="center"
                android:fontFamily="@font/lato_bold"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_marginTop="50dp"
                android:elevation="16dp"
                android:src="@drawable/tempat_pensil_artikel_gambar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginTop="225dp"
                android:text="Ide kreasi mudah yang tentu saja dapat dijadikan penghias atau ide kreasi bersama buah hati.\n Berikut adalah bahan-bahan yang diperlukan:"
                android:textColor="@color/black"
                android:fontFamily="@font/lato_regular"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
    <data>
        <variable
            name="TempatPensil"
            type="com.daurulang.reflux.edukasi.TempatPensil" />
    </data>
</layout>
