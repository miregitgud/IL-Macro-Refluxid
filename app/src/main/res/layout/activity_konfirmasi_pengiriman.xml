<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".kirimsampah.KonfirmasiPengiriman">

        <View
            android:id="@+id/view12"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/gradient_drawable" />

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/actionBarKonfirmasiPengiriman"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toTopOf="@+id/view12"
            tools:layout_editor_absoluteX="16dp" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="70dp"
            android:layout_height="31dp"
            android:layout_marginTop="8dp"
            android:contentDescription="point"
            android:src="@drawable/point"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/actionBarKonfirmasiPengiriman" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="650dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView2"
            tools:layout_editor_absoluteX="0dp">

            <ImageView
                android:layout_marginTop="10dp"
                android:layout_marginStart="30dp"
                android:src="@drawable/foto_konfirmasi_kirim"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnKonfirmasiPengiriman"
                android:layout_width="197dp"
                android:layout_height="30dp"
                android:layout_marginStart="110dp"
                android:layout_marginTop="580dp"
                android:background="@drawable/corner_bg"
                android:backgroundTint="#57AF60"
                android:text="Konfirmasi Pengiriman"
                android:textAllCaps="false" />

        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
    <data>

        <variable
            name="KonfirmasiPengiriman"
            type="com.daurulang.reflux.kirimsampah.KonfirmasiPengiriman" />

    </data>
</layout>
